# Minimal Containerfile for Terminail MCP Server
FROM python:3.11-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV PLAYWRIGHT_DOWNLOAD_HOST=https://npmmirror.com/mirrors/playwright

# Set domestic PyPI mirror early to speed up package installation
RUN pip config set global.index-url https://pypi.tuna.tsinghua.edu.cn/simple && \
    pip config set global.trusted-host pypi.tuna.tsinghua.edu.cn

# Install system dependencies required for Playwright and application
RUN apt-get update && apt-get install -y \
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libdbus-1-3 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    libgbm1 \
    libxss1 \
    libasound2 \
    fonts-liberation \
    libappindicator3-1 \
    xvfb \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy application files
COPY . /app

# Install Python dependencies from pyproject.toml
# This will automatically install playwright, fastapi, uvicorn, etc.
RUN pip install --no-cache-dir .

# Install Playwright browsers (note: we don't install browsers in container as per design)
# Install only Playwright dependencies (not browsers)
RUN playwright install-deps

# Create non-root user (security best practice)
RUN groupadd -r terminail && useradd -r -g terminail terminail
RUN chown -R terminail:terminail /app
USER terminail

# Expose MCP server port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/health || exit 1

# Start MCP server using the entry point defined in pyproject.toml
CMD ["terminail-mcp-server"]